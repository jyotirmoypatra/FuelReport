<resources>
    <style name="CustomPopupMenu" parent="Widget.AppCompat.PopupMenu" >
        <item name="android:popupBackground">@color/blue</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="android:textStyle">bold</item>

    </style>
    <!-- Define a custom theme for DatePicker -->
    <style name="CustomDatePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <!-- Change header color -->
        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <!-- Change calendar background -->
        <item name="android:windowBackground">@color/yellow</item>
        <!-- Change calendar text color -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:textColor">@color/black</item>


    </style>


</resources>
